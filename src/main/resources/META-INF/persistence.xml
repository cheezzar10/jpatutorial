<?xml version="1.0" encoding="UTF-8"?>
<!-- Use javax.persistence.Persistence.createEntitityManagerFactory -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
	<persistence-unit name="car" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<!-- JDBC connection properties -->
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://10.27.75.210/cardb"/>
			<property name="javax.persistence.jdbc.user" value="cardb"/>
			<property name="javax.persistence.jdbc.password" value="1q2w3e"/>
			
			<!-- Hibernate JPA provider properties -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<!-- using log4j2 logging framework configuration for statements logging -->
			<property name="hibernate.show_sql" value="false"/>

			<!-- Hibernate shared cache settings -->
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory" />
			<property name="hibernate.cache.use_second_level_cache" value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
		</properties>
	</persistence-unit>
</persistence>
